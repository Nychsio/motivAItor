generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dailyplan {
  id      String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id String   @db.Uuid
  date    DateTime @db.Date
  tasks   Json?
  users   users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([user_id, date])
}

model dailystats {
  id               String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id          String   @db.Uuid
  date             DateTime @db.Date
  sleep_hours      Decimal? @db.Decimal(4, 2)
  weight_kg        Decimal? @db.Decimal(5, 2)
  calories_kcal    Int?
  calories_details String?
  daily_focus      String?
  users            users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([user_id, date])
}

model monthlysummaries {
  id           String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id      String   @db.Uuid
  month        Int
  year         Int
  summary_text String
  generated_at DateTime @default(now()) @db.Timestamptz(6)
  users        users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([user_id, month, year])
}

model users {
  id               String             @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  email            String             @unique
  username         String?
  hashed_password  String
  gallup_strengths String[]
  created_at       DateTime           @default(now()) @db.Timestamptz(6)
  dailyplan        dailyplan[]
  dailystats       dailystats[]
  monthlysummaries monthlysummaries[]
  weeklysummaries  weeklysummaries[]
  workouts         workouts[]
}

model weeklysummaries {
  id           String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id      String   @db.Uuid
  start_date   DateTime @db.Date
  end_date     DateTime @db.Date
  summary_text String
  generated_at DateTime @default(now()) @db.Timestamptz(6)
  users        users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@unique([user_id, start_date])
}

model workouts {
  id              String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  user_id         String   @db.Uuid
  date            DateTime @default(now()) @db.Timestamptz(6)
  workout_name    String?
  google_form_url String?
  exercises_data  Json?
  users           users    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}
